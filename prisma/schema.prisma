generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  fullName  String
  idNumber  String   @unique
  course    String?
  role      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
